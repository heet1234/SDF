<%- include("partials/header") %>

<div class="grid-portfolio" id="portfolio">
	<div class="container">
		<p style="color: white; font-size: 72px; text-align: center">
			<%= `${event.name}` %>
		</p>
		<div class="row">
			<div class="col-md-12">
				<div class="single-blog-post">
					<img src="img/blog_post_1.png" alt="">
					<div class="text-content">
						<p>
							<%= `${event.description}` %>
						</p>
					</div>
				</div>
			</div>	
		</div>
		
		<div class="row">
			<% imgFiles.forEach( (imgPath) => { %>
			<div class="col-md-4 col-sm-6">
				<div class="portfolio-item">
					<div class="thumb">
						<a href="<%= `${imgPath}` %>" data-lightbox="image-1"><div class="hover-effect">
							<div class="hover-content" style="height: 270px">
							</div>
						</div></a>
						<div class="image">
							<img src="<%= `${imgPath}` %>">
						</div>
					</div>
				</div>
			</div>
			<% }) %>
		</div>
	</div>
</div>

