<div class="card mx-xl-5">
  <div class="card-body">
    <form action="/ngo/<%= `${event.name.split(" ")[0]}` %>/<%= `${event._id}` %>/upload" method="POST" enctype="multipart/form-data">
      <p class="h4 text-center py-4">Upload Images</p>
      <label for="cardName" class="grey-text font-weight-light">Event Name</label>
      <input name="name" id="cardName" type="text" class="form-control" value="<%= `${event.name}` %>" readonly>
      <br>
      <label for="cardFile" class="grey-text font-weight-light">Files</label>
      <input name = "eventImage" type="file" class="form-control" id="cardFile" placeholder="Add files" multiple required>
      <div class="text-center py-4 mt-3">
        <button class="btn btn-outline-primary" type="submit">Upload Images<i
            class="fa fa-paper-plane-o ml-2"></i></button>
      </div>
    </form>
  </div>
</div>



